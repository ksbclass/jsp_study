<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org/DTD config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <!-- config 파일에서 사용되는 환경 변수 설정 -->
  <properties resource="model/mapper/mybatis.properties" />
  
  <typeAliases> <!--  클래스의 별명 설정 -->
  	<typeAlias type="model.member.Member" alias="Member"/> <!-- 클래스명을 별명으로 설정 -->
  </typeAliases>
  <!-- Connection 객체  -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC" />
      <dataSource type="POOLED" >
         <property name="driver" value="${driver}"/>
         <property name="url" value="${url}"/>
         <property name="username" value="${username}"/>
         <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <!--  sql 구문을 가진 파일 목록 -->
  <mappers>
  	<package name="model.mapper"/> <!-- mapper 패키지의 인터페이스들을 sql 구문으로 등록해 -->
  </mappers>
</configuration>